<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_item_view_course_room"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nav_border"
    android:padding="5dp"
    android:layout_margin="0.5dp">

    <ImageView
        android:id="@+id/iv_item_avatar_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:text="Course name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"
        android:id="@+id/tv_item_course_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_avatar_icon"/>

    <TextView
        android:text="Course author"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_item_course_room_name"
        android:textSize="15sp"
        android:id="@+id/tv_item_course_room_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_avatar_icon" />

</RelativeLayout>