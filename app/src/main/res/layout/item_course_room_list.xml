<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_item_view_course_room"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="190dp"
    android:background="@drawable/nav_border"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_avatar_icon"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:textColor="@color/colorTextMain"
        android:layout_below="@id/iv_item_avatar_icon"
        android:layout_margin="5dp"
        android:padding="1dp"
        android:id="@+id/tv_item_course_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course name"
        android:textSize="15sp" />

    <TextView
        android:textColor="@color/colorTextSub"
        android:layout_below="@id/tv_item_course_room_name"
        android:layout_marginStart="5dp"
        android:padding="1dp"
        android:text="Course author"
        android:textSize="15sp"
        android:id="@+id/tv_item_course_room_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <RatingBar
        android:id="@+id/itemCourseRatingBar"
        android:layout_below="@id/tv_item_course_room_author"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:rating="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"/>

    <TextView
        android:textColor="@color/colorTextSub"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(10002)"
        android:layout_toEndOf="@+id/itemCourseRatingBar"
        android:layout_below="@id/tv_item_course_room_author"/>

    <TextView
        android:textColor="@color/colorTextSub"
        android:layout_below="@id/itemCourseRatingBar"
        android:layout_marginStart="5dp"
        android:padding="1dp"
        android:text="Student: "
        android:textSize="15sp"
        android:id="@+id/itemCourseTvStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="@color/colorTextSub"
        android:layout_toEndOf="@id/itemCourseTvStudent"
        android:layout_below="@id/itemCourseRatingBar"
        android:layout_marginStart="5dp"
        android:padding="1dp"
        android:text="1023"
        android:textSize="15sp"
        android:id="@+id/itemCourseStudentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>